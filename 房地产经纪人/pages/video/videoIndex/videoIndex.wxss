.mytitle{
  width:100%;
  height:100rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.title1,.title2{
  display:float;
  float:left;
  font-size:35rpx;
  height:100rpx;
  line-height: 100rpx;
  color:#47a7e7
}
.title1{
  margin-left:110rpx;
}

.title2{
  margin-left:80rpx;
}

.blockMove{
  position: absolute;
  top:98rpx;
  left:110rpx;
  width:204rpx;
  border-bottom:6rpx solid #0197f7;
  border-radius: 6rpx;
}

.block{
  width:100%;
  height:300rpx;
  padding-top:20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #cfcece;
}

.img,.right-block{
  display: float;
  float:left;
  margin-left:30rpx;
}

.img{
  width:300rpx;
  height:225rpx;
  
}

.title{
  width:350rpx;
  height:120rpx;
  border:1rpx solid pink;
  font-size:35rpx;
}

.hot{
  width:100%;
  height:40rpx;
  line-height: 40rpx;
  color:#998a8b;
  font-size:25rpx;
}

.hot-img,hot-text,.in-line{
  display: float;
  float:left;
}

.hot-img{
  width:40rpx;
  height:40rpx;
  border:1rpx solid red;
}

.hot-text{
  width:150rpx;
  border:1rpx solid green;
}







