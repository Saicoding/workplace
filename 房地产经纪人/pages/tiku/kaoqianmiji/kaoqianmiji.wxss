page {
  background: #f4f8f9;
}

.live-show {
  position: absolute;
  width: 100%;
  height: 422rpx;
  z-index:120;
  top: 0rpx;
  left: 0rpx;
  opacity: 1;
}

.live-play {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  top: 120rpx;
  left: 315rpx;
  z-index:140;
}

.live-bottom{
  position: absolute;
  top:342rpx;
  color:white;
  height:80rpx;
  line-height: 80rpx;
  width:100%;
  font-size:35rpx;
  z-index:140;
}

.text1,.text2{
  height:80rpx;
  line-height: 80rpx;
  display: float;
  float:left;
}

.text1{
  width:350rpx;
  padding-left:20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.text2{
  width:350rpx;
  padding-right:20rpx;
  text-align: right;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.past{
  background: white;
  width:100%;
  height:80rpx;
  margin-top:442rpx;
  border-bottom: 1rpx solid #ececec;
}

.past-img,.past-text{
  display: float;
  float:left;
}

.past-img{
  width:50rpx;
  height:50rpx;
  margin-top:15rpx;
  margin-left:25rpx;
}

.past-text{
  height:80rpx;
  line-height: 80rpx;
  font-size:30rpx;
  letter-spacing: 2rpx;
  margin-left:30rpx;
}

.hasNoVideo{
  width:100%;
  height:400rpx;
  line-height: 400rpx;
  text-align: center;
  color:rgb(131, 129, 129);
  font-size:35rpx;
  letter-spacing: 2rpx;
  background: white;
}

.list{
  width:100%;
}

.video,.video-img-big{
  width:370rpx;
  height:208rpx;
  border-radius: 5rpx 5rpx 0rpx 0rpx;
}

.video{
  display: float;
  float:left;
}

.video-img-big{
  position: relative;
  z-index:100;
  top:0rpx;
  left:0rpx;
}

.video-title{
  position: relative;
  width:370rpx;
  height:50rpx;
  font-size:25rpx;
  line-height: 50rpx;
  text-align: center;
  top:-70rpx;
  left:3rpx;
  z-index:140;
  background: white;
  border-radius: 0rpx 0rpx 5rpx 5rpx;
  border-bottom: 1rpx solid rgba(133, 133, 133, 0.2);
}

.time,.time-model{
  position:relative;
  border-radius: 0rpx 5rpx 0rpx 0rpx;
  width:190rpx;
  height:35rpx;
  text-align: center;
  line-height: 35rpx;
  color:white;
  font-size:25rpx;
  left: 165rpx;
  z-index:140;
  top:-210rpx;
}

.time-model{
  background: black;
  opacity: 0.3;
  z-index:139;
  top:-240rpx;
}




