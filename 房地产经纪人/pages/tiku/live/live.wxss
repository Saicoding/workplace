live-player {
  width: 100%;
  height: 422rpx;
}

.control {
  width: 100%;
  height: 422rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}

.control-up {
  font-size: 25rpx;
  color: white;
  margin-top: 10rpx;
}

.control-down {
  width: 100%;
  height: 50rpx;
  margin-top: 155rpx;
}


.control-up-text {
  border: 4rpx solid white;
  height: 30rpx;
  line-height: 30rpx;
  width: 80rpx;
  border-radius: 30rpx;
  text-align: center;
  margin-left: 650rpx;
}

.control-button {
  display: float;
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-left: 25rpx;
}

.fullScreen-control{
  font-size: 28rpx;
  color:white;
  margin-top:120rpx;
  position: absolute;
  text-align: center;
  line-height:750rpx;
}

.model,.model-opacity{
  position: absolute;
  width:70rpx;
  height:200rpx;
  font-size: 28rpx;
  bottom:40rpx;
  color:white;
  margin-top:120rpx;
  border-radius: 70rpx;
  left:650rpx;
}

.model-opacity{
  background: black;
  opacity: 0.3;
}


.back,.direction{
  height:70rpx;
  width:70rpx;
  margin-top:20rpx;
  transform:rotate(90deg);
  opacity: 0.9;
}


.back-img,.direction-img{
  width:40rpx;
  height:40rpx;
  margin-top:15rpx;
  margin-left:15rpx;
}