<view class="mycontainer">
  <view class="up">
    <view class="pic-container">
      <image class="pic" src="{{user.Pic}}" mode="aspectFit"></image>
    </view>
    <view class="nickname">{{user.Nickname}}</view>
  </view>
  <view class="time">
    <image class="time-icon" src="/imgs/date.png" mode="aspectFit"></image>
    <picker mode="multiSelector" value="{{dateTime1}}" bindchange="changeDateTime1" bindcolumnchange="changeDateTimeColumn1" range="{{dateTimeArray1}}">
      <view class="tui-picker-detail">
        当前统计时间: {{dateTimeArray1[0][dateTime1[0]]}}-{{dateTimeArray1[1][dateTime1[1]]}}-{{dateTimeArray1[2][dateTime1[2]]}} {{dateTimeArray1[3][dateTime1[3]]}}:{{dateTimeArray1[4][dateTime1[4]]}}
      </view>
    </picker>

  </view>

  <view wx:if="{{loaded}}" class='radarContainer'>
    <canvas class='radarCanvas' canvas-id='radarCanvas'></canvas>
  </view>
  <view wx:if="{{!loaded}}">
    <image class="loading-img" src="/imgs/timg.gif" mode="aspectFit"></image>
  </view>
</view>