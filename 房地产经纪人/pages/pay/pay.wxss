/* pages/pay/pay.wxss */

.mycontainer {
  padding: 50rpx 30rpx 30rpx 30rpx;
}

.up {
  width: 100%;
  height: 260rpx;
  display: float;
  float: left;
}

.bg {
  width: 100%;
  height: 100%;
}

.block1 {
  position: absolute;
  width: 100%;
  top: 80rpx;
}

.block2 {
  position: absolute;
  width: 100%;
  top: 370rpx;
}

.text1, .text2 {
  display: block;
  width: 690rpx;
  height: 60rpx;
  text-align: center;
}

.text1 {
  color: #dfe1e7;
  font-size: 35rpx;
}

.text2 {
  color: #f5f5f7;
  font-size: 45rpx;
  letter-spacing: 4rpx;
  font-weight: bold;
}

.bt-block {
  width: 100%;
  margin-top: 30rpx;
}

.bt1, .bt2 {
  display: float;
  float: left;
  color: white;
  width: 200rpx;
  height: 50rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  border-radius: 5rpx;
  text-align: center;
}

.bt1 {
  background: #0097f7;
  margin-left: 150rpx;
}

.bt2 {
  background: #ff8b0e;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
}

.phone-container {
  display: float;
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-top: 5rpx;
  margin-left: 15rpx;
}

.phone {
  width: 40rpx;
  height: 40rpx;
}

.bt-text {
  display: float;
  float: left;
  height: 40rpx;
  letter-spacing: 2rpx;
  margin-left: 5rpx;
}

.down {
  clear: both;
  width: 100%;
  height: 260rpx;
  display: float;
  float: left;
  margin-top: 25rpx;
}

.service {
  position: absolute;
  width: 690rpx;
  padding-top: 20rpx;
  text-align: center;
  top: 630rpx;
  box-shadow: rgb(211, 206, 206) 3rpx 3rpx 8rpx 1rpx;
}

.service-text1 {
  width: 690rpx;
  font-weight: bold;
  font-size: 35rpx;
  letter-spacing: 6rpx;
  color: #204674;
}

.company {
  text-align: center;
  height: 50rpx;
  display: table;
  margin: 50rpx auto;
  line-height: 50rpx;
}

.address {
  text-align: center;
  font-size: 25rpx;
}

.company-name, .company-phone, .company-tel {
  display: float;
  float: left;
  font-size: 30rpx;
}

.company-tel {
  margin-left: 10rpx;
}

.company-name {
  font-size: 38rpx;
  width: 100%;
  text-align: center;
  margin: 20rpx 0rpx 20rpx 0rpx;
}

.company-phone {
  width: 36rpx;
  height: 36rpx;
  margin-top: 7rpx;
}

/* 砍价版本 */

.mycontainer1 {
  height:100%;
  background: #6701c1;
}

.title {
  text-align: center;
  color: white;
  font-size: 50rpx;
}

.info {
  background: white;
  width: 700rpx;
  border-radius: 10rpx;
  margin: 50rpx auto;
  padding-top: 50rpx;
  padding-bottom: 40rpx;
}

.info-title {
  width: 100%;
  height: 40rpx;
  color: rgb(255, 123, 0);
  text-align: center;
  font-size: 35rpx;
  margin-bottom: 30rpx;
}

.info-text {
  width: 90%;
  margin-left: 90rpx;
  height: 200rpx;
}

.info-text-block, .info-text-icon, .info-text-detail {
  display: float;
  float: left;
}

.info-text-block {
  height: 70rpx;
  width: 280rpx;
  margin-left: 20rpx;
}

.info-text-icon {
  width: 35rpx;
  height: 35rpx;
  margin-top: 18rpx;
}

.info-text-detail {
  color: #6701c1;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 10rpx;
}

.info-bottom {
  clear: both;
  width: 700rpx;
  text-align: center;
  font-size: 28rpx;
  margin-top: 70rpx;
}

/* 中间的价格 */

.price {
  display: flex;
   justify-content:center;
}

.price-text {
  width: 50rpx;
  height: 90rpx;
  background: linear-gradient(to bottom, #fffeff, #b3b3b3);
  color: #6500c1;
  text-align: center;
  line-height: 90rpx;
  font-weight: bold;
  margin-left: 10rpx;
  box-shadow: rgb(53, 53, 53) 3rpx 3rpx 8rpx 1rpx;
}

/* 砍价按钮 */

.kanjia {
  display: flex;
  margin-top: 50rpx;
  justify-content:center;
}

.kanjia-btn1, .kanjia-btn2 {
  height: 70rpx;
  border-radius: 70rpx;
  color: white;
  font-size: 28rpx;
  line-height: 70rpx;
  text-align: center;
}

.kanjia-btn1 {
  background: linear-gradient(to bottom, #f97779, #c9110d);
  width: 350rpx;
  margin-left: 50rpx;
}

.kanjia-btn2 {
  background: linear-gradient(to bottom, #08fd0b, #01ae01);
  width: 250rpx;
   margin-left: 50rpx;
}

/* 倒计时 */
.daojishi{
  width:500rpx;
  display: inline-flex;
  color:white;
  font-size:28rpx;
  letter-spacing: 3rpx;
  margin-left:170rpx;
  margin-top:80rpx;
}

.daojishi-text{
  color:black;
  background: white;
  height:40rpx;
  line-height: 40rpx;
  width:40rpx;
  text-align: center;
  margin-left:10rpx;
}

/* 规则 */
.role{
  background: white;
  width:640rpx;
  margin:0 auto;
  border-radius: 10rpx;
  margin-top:100rpx;
  margin-bottom:40rpx;
  padding:50rpx 30rpx 50rpx 30rpx;
}

.role-title{
  font-size:28rpx;
  color:black;
}

.role-info{
  margin-top:20rpx;
}

.role-info-text{
  height:50rpx;
  line-height: 50rpx;
  font-size:25rpx;
  color:rgb(148, 148, 148);
}
