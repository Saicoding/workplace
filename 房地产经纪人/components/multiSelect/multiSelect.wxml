        <image src="{{shiti.srcs.D}}" mod="aspectFit" class="answer-img"></image>
      </view>

      <text class="answer-text">{{shiti.D}}</text>
    </view>
  </label>

  <label  wx:if="{{shiti.E==''?false:true}}">
    <checkbox hidden value="E" checked="{{shiti.E_checked}}" />
