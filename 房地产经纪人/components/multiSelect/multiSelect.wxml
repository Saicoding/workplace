      <view class="img-container">
        <image src="{{shiti.srcs.A}}" mod="aspectFit" class="answer-img"></image>
      </view>
      <text class="answer-text">{{shiti.A}}</text>
    </view>
  </label>

  <label>
    <checkbox hidden value="B" checked="{{shiti.B_checked}}" />
