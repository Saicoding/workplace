.container {
  margin-top: 50rpx;
}

.jiexi_border {
  width: 100%;
  height: 50rpx;
  clear: both;
  display: block;
  align-content: center;
  padding-left: 170rpx;
}

.line {
  display: float;
  float: left;
  width: 150rpx;
  margin-top: 20rpx;
  border: 0;
  height: 0;
  border-top: 1rpx solid rgba(0, 0, 0, 0.2);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}

.txt {
  display: float;
  float: left;
  color: #686868;
  margin: 0 20rpx;
  font-size: 25rpx;
}

.jiexi {
  margin: 0 auto;
  margin-top: 25rpx;
  text-align: left;
  clear: both;
  width: 80%;
  color: #666;
  line-height: 40rpx;
  font-size: 25rpx;
  text-indent: 40rpx;
}
