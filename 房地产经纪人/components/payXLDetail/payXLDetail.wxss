/* components/errorRecovery/errorRecovery.wxss */
.container-out{
  width:80%;
  border:1px solid#f3f3f3;
  margin: 0 auto;
  z-index: 100;
  background: white;
}
.container-in{
  width:80%;
  position: absolute;
  background: white;
  z-index: 100;
  border-radius:15rpx;
  padding-bottom:50rpx;
}

.modal{
  position: absolute;
  top:0rpx;
  left:0rpx;
  width:100%;
  height:100%;
  filter:Alpha(Opacity=60);
  background-color:#1F1F1F;
  opacity: 0.5;
  z-index: 99;
}

.title{
  width:90%;
  margin:0 auto;
  font-weight: bold;
  height:50rpx;
  line-height: 80rpx;
  font-size:32rpx;
}

.content{
  border-radius:5rpx;
  font-size:30rpx;
  width:90%;
  line-height: 50rpx;
  margin:30rpx auto;
}

.submit{
  background:#0197f6;
  font-size:32rpx;
  width:45%;
  height:70rpx;
  line-height: 70rpx;
  margin:0 auto;
  color:white;
  text-align: center;
  border-radius: 70rpx;
  margin-top:50rpx;
  letter-spacing: 4rpx;
}
